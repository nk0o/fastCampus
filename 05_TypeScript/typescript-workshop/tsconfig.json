//별도의 컴파일러 설정파일 만들수 있음 
// tsc 명령어만 쳐도 원하는대로 컴파일 됨
{
    "include": [
        "src/**/*.ts" 
    ],
    "exclude": [
        "node_modules"//typescript 컴파일 대상에서 제외
    ],
    "compilerOptions": {
        "module": "es6",//모듈에 대한 옵션을 common
        "rootDir": "src", //모듈의 루트가 되는
        "outDir" : "dist", //컴파일된 파일들이 설치되는 폴더
        "target": "es5",
        "sourceMap":  true,
        "removeComments": true, // 주석제거
        "noImplicitAny":false, // 매개변수에 타입값 주지 않으면 any로 설정되는 걸 막음

    }
}